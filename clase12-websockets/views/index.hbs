<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Handlebars - Websocket</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    {{!-- Websocket --}}
    <script src="/socket.io/socket.io.js"></script>

</head>
<body>

    <div class="container mt-3">
        {{>titulo}}
    </div>


    <div class="container mt-5">

        {{!-- CHAT --}}
        <h2>Chat</h2>            

        <div id="messages">
            <p>Aqui van los mensajes</p>
        </div>
    </div>
        

    <div class="container mt-5">
        {{!-- Formulario - Agregar producto --}}
        <h2>Subir producto</h2>
        <form action="/productos" method="post" class="border border-dark p-5">
            <div class="mb-3">
                <label class="form-label">Title: </label>
                <input type="text" name="title" id="title" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Price: </label>
                <input type="text" name="price" id="price" class="form-control" required>
            </div>
            <div class="mb-5">
                <label class="form-label">Thumbnail: </label>
                <input type="text" name="thumbnail" id="thumbnail" class="form-control" required>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-success" type="submit">Agregar producto</button>
            </div>
        </form>        

        {{!-- tabla productos --}}
        <h2 class="mt-5">Productos</h2>
        <table class="table">
            {{#if productos.length }}
            <thead>
                <tr>
                <th scope="col" class="align-middle">Title</th>
                <th scope="col" class="align-middle">Price</th>
                <th scope="col" class="align-middle">Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <td class="align-middle">{{title}}</td>
                    <td class="align-middle">{{price}}</td>
                    <td class="align-middle"><img src={{thumbnail}} alt="producto" width="80"></td>
                </tr>
                {{/each }}
            </tbody>
        </table>   
        {{else}}
            <p style="color: red">No hay productos</p>
        {{/if }}

    </div>    

    {{!-- SCRIPT --}}
    {{!-- <script src="main.js"></script> --}}
    <script src="../main.js"></script>

</body>
</html>

